{
  "name": "Covibuceo Container", // Nombre del contenedor
  "image": "mcr.microsoft.com/devcontainers/php:1-8.0-bullseye", // Imagen base de PHP 8.0
  "features": {
    "ghcr.io/devcontainers/features/php:1": { // Configuraci√≥n de PHP
      "version": "8.0",
      "installComposer": true // Instalar Composer
    }
  },
  "forwardPorts": [8080, 3000, 3306], // Puertos a exponer, 8080 para el servidor web, 3000 para Node.js y 3306 para MySQL
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y default-mysql-server default-mysql-client && sudo service mysql start", // Comando para instalar MySQL y arrancar el servicio
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "ms-vscode.vscode-json"
      ]
    }
  }
}