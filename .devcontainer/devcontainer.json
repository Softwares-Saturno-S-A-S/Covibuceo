{
  "name": "Covibuceo Container", //Nombre de el contenedor general de todo el repositorio
  "image": "mcr.microsoft.com/devcontainers/php:8.1-apache", // Imagen base de PHP con Apache 
  "features": {
    "ghcr.io/devcontainers/features/mysql:1": { // Instala MySQL como una característica del contenedor. 1 representa el metodo uno de instalación
        "version": "8.0" // Especifica una versión concreta de MySQL, en este caso la 8.0
    }
  },
  "forwardPorts": [3306, 8080], // Define los puertos que se van a exponer, 3306 para MySQL y 8080 para Apache
  "postCreateCommand": "sudo service mysql start" // Inicializa el servicio de MySQL al crear el contenedor
}